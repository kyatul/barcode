<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headContact"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@drawable/slab2"
        android:layout_alignParentTop="true" >
        
        <ImageView 
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvHeadContact"
            android:src="@drawable/home" />
        
        <TextView 
            android:id="@id/tvHeadContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_alignParentRight="true"
            android:paddingRight="10sp"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/TapAdView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headContact"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2074945741246452/1891842120" />

    <TextView
        android:id="@+id/tFb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TapAdView1"
        android:gravity="center"
        android:paddingBottom="10sp"
        android:paddingTop="100sp"
        android:text="Stay in Touch!"
        android:textSize="45sp" />

    <LinearLayout
        android:id="@+id/Fll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tFb"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fb"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:gravity="center"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/twitter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Fll"
        android:orientation="vertical"
        android:paddingTop="100sp" >

        <TextView
            android:id="@+id/tMail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We love to hear, \n So maybe.. give us a shout at"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tMail1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30sp"
            android:text="shout@bigdreamslab.com"
            android:textSize="45sp" />
    </LinearLayout>

</RelativeLayout>