<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:background="#b9baba">

        <TextView
            android:id="@+id/tvbackQRPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10sp"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20sp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilLongitude"
            android:theme="@style/EditTextTheme">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="number"
                android:padding="25sp"
                android:textSize="60sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btPickContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilPhone"
            android:layout_marginTop="50sp"
            android:background="#b9baba"
            android:padding="25sp"
            android:text="Pick from Contacts"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

        <Button
            android:id="@+id/btCreatePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btPickContact"
            android:layout_marginTop="10sp"
            android:background="#b9baba"
            android:padding="25sp"
            android:text="Create"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="60sp" />
    </RelativeLayout>

</RelativeLayout>