<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headCreatQR"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/slab2" >

        <TextView
            android:id="@+id/tvbackQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10sp"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="23sp" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewQRC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headCreatQR"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2074945741246452/1891842120" />

    <ListView
        android:id="@+id/list_qr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_margin="10sp"
        android:background="@color/list_background"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

</LinearLayout>